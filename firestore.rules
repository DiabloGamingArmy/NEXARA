rules_version = '2';

service firebase.storage {
  match /b/{bucket}/o {
    match /{allPaths=**} {
      // Allow everyone to see images
      allow read: if true;
      
      // Allow logged-in users to upload files (max 5MB)
      allow write: if request.auth != null && request.resource.size < 5 * 1024 * 1024;
    }
  }
}
