rules_version = '2';

service firebase.storage {
  match /b/{bucket}/o {

    // Helpers
    function isSignedIn() { return request.auth != null; }

    // Public images
    match /public_images/{allPaths=**} {
      allow read: if true;
      allow write: if isSignedIn();
    }

    match /avatars/{allPaths=**} {
      allow read: if true;
      allow write: if isSignedIn();
    }

    match /thumbnails/{allPaths=**} {
      allow read: if true;
      allow write: if isSignedIn();
    }

    // Videos
    match /videos/{uid}/{videoId}/{fileName} {
      allow read: if true;
      allow write: if isSignedIn()
        && request.auth.uid == uid
        && request.resource.size < 100 * 1024 * 1024 * 1024;
    }

    // Conversation avatars
    match /conversation_avatars/{cid}/{fileName} {
      allow read: if true;
      allow write: if isSignedIn()
        && exists(/databases/{database}/documents/conversations/$(cid))
        && request.auth.uid in get(/databases/{database}/documents/conversations/$(cid)).data.participants;
    }

    // DM media attachments (chat images)
    // Path format: /dm_media/{conversationId}/{fileName}
    // Only participants of the conversation can read/write these files.
    match /dm_media/{cid}/{fileName} {
      allow read: if isSignedIn()
        && exists(/databases/{database}/documents/conversations/$(cid))
        && request.auth.uid in get(/databases/{database}/documents/conversations/$(cid)).data.participants;
      allow write: if isSignedIn()
        && exists(/databases/{database}/documents/conversations/$(cid))
        && request.auth.uid in get(/databases/{database}/documents/conversations/$(cid)).data.participants;
    }

    match /comment_media/{uid}/{fileName} {
      allow read: if true;
      allow write: if isSignedIn()
        && request.auth.uid == uid
        && request.resource.size < 25 * 1024 * 1024;
    }

    // Default deny
    match /{allPaths=**} {
      allow read, write: if false;
    }
  }
}
